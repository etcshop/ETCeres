    </div>
    <div id="headerAccount" class="toolButton"></div>
    <div id="headerBasket" class="toolButton">
      <div id="BasketButtonBox" class="hidden-xs hidden-sm">{{ trans("ETCeres::Template.ETC_Warenkorb") }}</div>
