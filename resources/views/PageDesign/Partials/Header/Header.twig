      <div id="BasketQuantity" v-basket-item-quantity="$store.state.basket.data.itemQuantity">0</div>
        <basket-preview template="#vue-basket-preview-hoverETC" :show-net-prices="{{ showNetPrices | json_encode }}"></basket-preview>
